{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.14.1",
    "concurrently": "^4.1.0"
  },
  "scripts": {
    "start": "concurrently 'yarn:dev:backend' 'yarn:dev:frontend'",
    "dev:frontend": "lerna run start --stream --parallel --scope=@aui-cms/frontend",
    "dev:backend": "lerna run dev --stream --parallel --scope=@aui-cms/backend"
  }
}
